---
import { Image } from "astro:assets";
import type { Tweet } from "@/types";
import Icon from "@/icons/Icon.astro";

type Props = { tweet: Tweet; index: number };

const {
  tweet: { user, tweet: body, photos: images },
  index,
} = Astro.props;
const viewTweetHref = `/${user.user}/tweet/${index + 1}`;
const userHref = "#"; //`https://x.com/${user.user}`;
---

<li
  class="grid grid-cols-8 bg-background transition-all hover:bg-muted border-b border-border"
>
  <a href={viewTweetHref} class="pt-4">
    <Image
      width="40"
      height="40"
      src={user.photo}
      alt="user photo"
      class="rounded-full mx-auto"
    />
  </a>

  <div class="col-span-7 pt-3">
    <div class="w-auto flex text-base gap-1">
      <a class="flex gap-1" href="#">
        <h2 transition:name="username" class="font-bold hover:underline">
          {user.name}
        </h2>
        <h2 class="text-muted-foreground">
          @{user.user}
        </h2>
      </a>
      <span class="block text-muted-foreground">Â·</span>
      <a href={viewTweetHref} class="flex-1">
        <span class="block text-muted-foreground">2h</span>
      </a>
    </div>

    <a href={viewTweetHref}>
      <p class="block text-base pr-4 pb-4 leading-5">
        {body}
      </p>
    </a>
    <div class="flex">
      {
        images.map((img, idx) => (
          <Image
            transition:name={`img-${idx}`}
            src={`https://pbs.twimg.com/media/${img}?format=webp&name=small`}
            width="130"
            height="130"
            alt="tweet image"
            class="rounded-md border border-border flex-1"
          />
        ))
      }
      <a href={viewTweetHref} class="w-4 block"></a>
    </div>
    <a href={viewTweetHref} class="flex py-4 pr-4 items-center justify-between">
      <Icon name="like" class="h-[18.5px] w-[18.5px] text-muted-foreground" />
      <Icon name="reply" class="h-[18.5px] w-[18.5px] text-muted-foreground" />
      <button class="flex text-muted justify-center items-center gap-2">
        <Icon
          name="retweet"
          class="h-[18.5px] w-[18.5px] text-muted-foreground"
        />
        <span>2</span>
      </button>
    </a>
  </div>
</li>
