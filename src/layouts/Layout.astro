---
import { ViewTransitions } from "astro:transitions";
import Themes from "astro-themes";
import SiteLayout from "./SiteLayout.astro";

type Props = { title: string };

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <Themes />
    <ViewTransitions />
  </head>
  <body>
    <SiteLayout>
      <slot />
    </SiteLayout>
    <style is:global>
      @font-face {
        font-family: "ChirpRegular";
        src: url("chirp-regular-web.woff") format("woff");
      }
      @font-face {
        font-family: "ChirpMedium";
        src: url("chirp-medium-web.woff") format("woff");
      }
      @font-face {
        font-family: "ChirpBold";
        src: url("chirp-bold-web.woff") format("woff");
      }
      @font-face {
        font-family: "ChirpHeavy";
        src: url("chirp-heavy-web.woff") format("woff");
      }
    </style>
    <style is:global is:inline>
      :root {
        --background: #ffffff;
        --foreground: #101518;
        --primary: #1d9bf0;
        --muted: #f6f6f6;
        --muted-foreground: #71767b;
        --gray: #00004d;
        --border: #ecf1f2;
      }

      .dark,
      [data-theme="dark"] {
        --background: #000;
        --foreground: #e2e6e7;
        --primary: #1d9bf0;
        --muted: #0c0c0c;
        --muted-foreground: #71767b;
        --gray: #00004d;
        --border: #292d30;
      }

      html {
        font-family: "Lato", sans-serif;
        background-color: var(--background);
        color: var(--foreground);
      }

      svg {
        /* cursor: ; */
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
    </style>
    <script is:inline>
      document.addEventListener("astro:after-swap", () =>
        document.dispatchEvent(new CustomEvent("set-theme")),
      );
    </script>
  </body>
</html>
